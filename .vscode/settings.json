{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.analysis.extraPaths": ["./"],
  "python.autoComplete.extraPaths": ["./"],
  "python.terminal.activateEnvironment": true,
  "ruff.path": ["${workspaceFolder}/.venv/Scripts/ruff.exe"],
  "ruff.enable": true,
  "ruff.lint.ignore": ["B008"],
  "ruff.organizeImports": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.rulers": [120],
  "ruff.lineLength": 120,
  "files.insertFinalNewline": true,
  "terminal.integrated.scrollback": 10000,
  "git.autofetch": true,
  "editor.formatOnSave": true,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "必ず日本語で書いてください。"
    },
    {
      "text": "feat:, fix:, chore:, docs:, refactor:, test:, style:, ci: などの一般的な prefix を必ずつけてください。"
    },
    {
      "text": "コミットメッセージは複数行でもかまいませんが、1 行目は要約として 50 文字以内にしてください。2 行目は空行にして、3 行目以降に詳細説明を追加してください。"
    }
  ]
}
